.col-md-10
  %br
  %h2 Add Template
  %br

  %form{ method: 'post', action: '/admin/templates/add', enctype: 'multipart/form-data' }
    %table
      %tr
        %td
          %label.col-md-3{ for: 'report-type' }
            Report Type &nbsp;
        %td
          %input#report-type{ type: 'text', name: 'report_type', required: true }
      %tr
        %td
          %label.col-md-3{ for: 'description' }
            File Description &nbsp;
        %td
          %input#description{ type: 'text', name: 'description' }
      %tr
        %td
          %label.col-md-3{ for: 'finding-template' }
            Finding Template &nbsp;
        %td
          %input#finding-template{ type: 'checkbox', name: 'finding_template' }
      %tr
        %td
          %label.col-md-3{ for: 'status-template' }
            Status Template &nbsp;
        %td
          %input#status-template{ type: 'checkbox', name: 'status_template' }
      %tr
        %td
          %label.col-md-3{ for: 'file' }
            DOCX
        %td
          %input#file{ type: 'file', name: 'file' }

    %br
    %input.btn.btn-default{ type: 'submit', value: 'Add' }
    %a.btn.btn-default{ href: '/admin/templates' }
      Cancel
