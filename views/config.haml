.col-md-10
  %br
  %h2 Configuration Options (Must Restart After Changes)
  %br

  %form{ method: 'post', action: '/admin/config' }
    %form
      %table
        %tr
          %td
            %label.col-md-3{ for: 'risk-scoring' }
              Risk Scoring Algorithm
          %td
            %select#risk-scoring{ name: 'risk_scoring' }
              - if @scoring == 'default'
                %option{ selected: 'selected' } Default
              - else
                %option Default Scoring
              - if @scoring == 'dread'
                %option{ selected: 'selected' } DREAD
              - else
                %option DREAD
              - if @scoring == 'cvss'
                %option{ selected: 'selected' } CVSSv2
              - else
                %option CVSSv2
              - if @scoring == 'cvssv3'
                %option{ selected: 'selected' } CVSSv3
              - else
                %option CVSSv3
              - if @scoring == 'riskmatrix'
                %option{ selected: 'selected' } RISKMATRIX
              - else
                %option RISKMATRIX
              - if @scoring == 'nist800'
                %option{ selected: 'selected' } NIST800-30
              - else
                %option NIST800-30

        - @config.each do |k, v|
          - next if k =~ /ssl_certificate/
          - next if k =~ /ssl_key/
          - next if k =~ /log_file/
          - next if k =~ /image_align/
          - next if k == 'cvss' || k == 'dread' || k == 'cvssv3' || k == 'riskmatrix' || k == 'nist800'
          %tr
            %td
              %label.col-md-3{ for: k.to_s }
                #{k}
            %td
              - if (v == false) || (v == true) || (v == 'false') || (v == 'true')
                - if (v == true) || (v == 'true')
                  %input{ id: k.to_s, type: 'checkbox', name: k.to_s, checked: 'checked' }
                - else
                  %input{ id: k.to_s, type: 'checkbox', name: k.to_s }
              - elsif v.instance_of? Array
                %input{ id: k.to_s, type: 'text', name: k.to_s, value: v.join(',') }
              - else
                %input{ id: k.to_s, type: 'text', name: k.to_s, value: v.to_s }

      %br
      %input.btn.btn-default{ type: 'submit', value: 'Save' }
      %a.btn.btn-default{ href: '/admin/' }
        Cancel
